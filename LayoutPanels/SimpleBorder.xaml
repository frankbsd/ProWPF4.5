<Window x:Class="LayoutPanels.SimpleBorder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LayoutPanels"
        mc:Ignorable="d"
        Title="SimpleBorder" Height="300" Width="240">
    <Grid>
        <Border Margin="5" Padding="5" Background="LightYellow"
                BorderBrush="SteelBlue" BorderThickness="3,5,3,5" CornerRadius="20">
            <StackPanel>
                <Button Margin="3">One</Button>
                <Button Margin="3">Two</Button>
                <Button Margin="3">Three</Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
